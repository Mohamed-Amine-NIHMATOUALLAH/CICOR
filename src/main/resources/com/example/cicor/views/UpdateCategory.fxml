<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cicor.Controllers.UpdateCategoryController">

    <!-- ✅ Header Top -->
    <top>
        <HBox prefHeight="85.0" prefWidth="900.0" style="-fx-background-color: #113F67;" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="38.0" fitWidth="86.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo-cicor.png" />
                    </image>
                    <HBox.margin>
                        <Insets bottom="20.0" left="30.0" right="20.0" top="20.0" />
                    </HBox.margin>
                </ImageView>
                <ImageView fitHeight="127.0" fitWidth="71.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/update_icon-removebg-preview.png" />
                    </image>
                    <HBox.margin>
                        <Insets bottom="20.0" left="70.0" top="20.0" />
                    </HBox.margin>
                </ImageView>
                <Label text="Update Category" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                    <HBox.margin>
                        <Insets top="30.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </top>

    <!-- ✅ Form Center -->
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane layoutX="110.0" layoutY="42.0" prefHeight="230.0" prefWidth="380.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="251.0" minWidth="10.0" prefWidth="142.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="386.0" minWidth="10.0" prefWidth="240.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Category Name">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="nameField" prefHeight="30.0" GridPane.columnIndex="1" />

                        <Label text="Hardware Version" GridPane.rowIndex="1">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="hardwareField" prefHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Software Version" GridPane.rowIndex="2">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <TextField fx:id="softwareField" prefHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
            </children>
        </AnchorPane>
    </center>

    <!-- ✅ Footer Buttons -->
    <bottom>
        <HBox prefHeight="100.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #2580c5;" text="💾 Save" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="140.0" top="30.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color:#E14434" text="❌ Cancel" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="100.0" right="70.0" top="30.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
